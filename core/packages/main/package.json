{
  "name": "@mks2508/mks-bot-father",
  "version": "0.1.0",
  "description": "Complete pipeline for Telegram bot automation: BotFather + GitHub + Coolify deployment",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mks-bot-father": "./dist/bin/cli.js",
    "mbf": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:lib && bun run build:cli",
    "build:lib": "tsgo -p tsconfig.build.json",
    "build:cli": "bun build ./src/cli/index.ts --outfile ./dist/bin/cli.js --target node --minify",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "botfather",
    "github",
    "coolify",
    "deployment",
    "automation",
    "cli"
  ],
  "author": "MKS2508",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MKS2508/mks-bot-father"
  },
  "homepage": "https://github.com/MKS2508/mks-bot-father#readme",
  "bugs": {
    "url": "https://github.com/MKS2508/mks-bot-father/issues"
  },
  "dependencies": {
    "@mks2508/telegram-bot-manager": "^0.1.1",
    "@mks2508/better-logger": "^4.0.0",
    "@mks2508/no-throw": "^0.1.0",
    "arktype": "^2.1.29",
    "commander": "^14.0.0",
    "chalk": "^5.4.1",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
