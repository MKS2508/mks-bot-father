{
  "name": "@mks2508/bot-manager-agent",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./cli": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun --watch src/cli.ts",
    "start": "bun src/cli.ts",
    "start:telegram": "bun src/telegram/bot.ts",
    "build": "bun build ./src/cli.ts --outfile ./dist/agent.js --target node",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.1",
    "@mks2508/mks-bot-father": "workspace:*",
    "@mks2508/better-logger": "^4.0.0",
    "@mks2508/no-throw": "^0.1.0",
    "zod": "^3.24.1",
    "telegraf": "^4.16.0",
    "chalk": "^5.4.1",
    "ora": "^8.0.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  }
}
